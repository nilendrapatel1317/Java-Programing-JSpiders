package com.string;

public class Test {

	public static void main(String[] args) {

		int n = 4;
		for (int i = 1; i <= 2 * n - 1; i++) {

			int totalColsInRow = i <= n ? n - i + 1 : i - n + 1;
			int spaces = i <= n ? 2 * i - 3 : 2 * (2 * n - i) - 3;

			for (int j = 1; j <= totalColsInRow; j++) {
				System.out.print("*");
			}
			for (int j = 1; j <= spaces; j++) {
				System.out.print(" ");
			}

			if (i == 1) {
				for (int j = 1; j <= i==1 || i==2*n-1 ? totalColsInRow-1; j++) {
					System.out.print("*");
				}
			}
			System.out.println();
		}

	}

}