package com.array;

public class First_Min {
	public static void main(String[] args) {
		int[] a = {4,3,5,6,8,7,9,2,12};
		System.out.println(firstSmallestNum(a));
		
	}
	
	public static int firstSmallestNum(int[] a) {
		int firstSmall = a[0];
		for (int i = 0; i < a.length; i++) {
			if(a[i] < firstSmall) {
				firstSmall = a[i];
			}
		}
		return firstSmall;
	}
}
