package com.string;

public class Test {

	public static void main(String[] args) {

		int n = 5;
		for (int i = 1; i <= 2 * n - 1; i++) {

			int stars = n - Math.abs(n - i);
			int spaces = 2 * Math.abs(i - n) - 1;

			for (int j = 1; j <= stars; j++) {
				System.out.print("*");
			}
			for (int j = 1; j <= spaces; j++) {
				System.out.print(" ");
			}
			for (int j = 1; j <= (i == 1 || i == 2 * n - 1 ? stars - 1 : stars); j++) {
				System.out.print("*");
			}
			System.out.println();
		}
	}
}
