package com.string;

public class Test {

	public static void main(String[] args) {
		System.out.println("* * * * * * *");
		System.out.println("* * * A * * *");
		System.out.println("* * A A A * *");
		System.out.println("* A A A A A *");
		System.out.println("* * A A A * *");
		System.out.println("* * * A * * *");
		System.out.println("* * * * * * *");
		System.out.println();
		
		int n = 5;
		for (int i = 1; i <= 2*n-1; i++) {
			int totalColsInRow = i > n ? n-1 : n+1;
			for (int j = 1; j <= totalColsInRow; j++) {
				System.out.print("*");
			}
			System.out.println();
		}

	}

}
